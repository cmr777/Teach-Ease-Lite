<script type="text/javascript">
    $('.iconPasword').click(function show() {
        if ($(this).hasClass('fa fa-eye')) {
            $('#Password').attr('type', 'text');
            $('.iconPasword').removeClass('fa fa-eye').addClass('fa fa-eye-slash');
        }
        else {
            //Change the attribute back to password
            $('#Password').attr('type', 'password');
            $('.iconPasword').removeClass('fa fa-eye-slash').addClass('fa fa-eye');
        }
    });
    $('.iconConfirmPasword').click(function show() {
        if ($(this).hasClass('fa fa-eye')) {
            $('#ConfirmPassword').attr('type', 'text');
            $('.iconConfirmPasword').removeClass('fa fa-eye').addClass('fa fa-eye-slash');
        }
        else {
            //Change the attribute back to password
            $('#ConfirmPassword').attr('type', 'password');
            $('.iconConfirmPasword').removeClass('fa fa-eye-slash').addClass('fa fa-eye');
        }
    });

    function BackButton() {
        window.location.href = '@Url.Action("Index","Viewer")';
    }
</script>
